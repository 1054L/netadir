{# templates/campaign/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestión de Campañas{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestión de Campañas</h1>
        <a href="{{ path('app_campaign_new') }}" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Nueva Campaña
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Plantilla</th>
                        <th>Creada el</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for campaign in campaigns %}
                        <tr>
                            <td>{{ campaign.name }}</td>
                            <td>
                                {% set badge_color = 'bg-secondary' %} {# Borrador #}
                                {% if campaign.status == 'Completada' %}
                                    {% set badge_color = 'bg-success' %}
                                {% elseif campaign.status == 'Enviando' %} {# Para el futuro #}
                                    {% set badge_color = 'bg-info' %}
                                {% endif %}
                                <span class="badge {{ badge_color }}">{{ campaign.status }}</span>
                            </td>
                            <td>{{ campaign.templateName }}</td>
                            <td>{{ campaign.createdAt|date('d/m/Y') }}</td>
                            <td>
                                {% if campaign.status == 'Borrador' %}
                                    <a href="{{ path('app_campaign_launch', {'id': campaign.id}) }}" 
                                        class="btn btn-sm btn-success" 
                                        onclick="return confirm('¿Estás seguro de que quieres lanzar esta campaña? Esta acción es irreversible.')">
                                        <i class="fa-solid fa-rocket me-1"></i> Lanzar
                                    </a>
                                {% else %}
                                    <a href="{{ path('app_report_show', {'id': campaign.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fa-solid fa-eye me-1"></i> Ver Reporte
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No has creado ninguna campaña.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}