{% extends 'base.html.twig' %}

{% block title %}Crear una cuenta{% endblock %}

{% block body %}
<div class="container my-5" style="max-width: 600px;">
    <div class="card shadow-sm">
        <div class="card-header text-center">
            <h2>Crear una nueva cuenta</h2>
            <p class="text-muted">Da de alta tu empresa y tu cuenta de administrador.</p>
        </div>
        <div class="card-body p-4">
            {{ form_start(registrationForm) }}
            
            {# --- Sección de la Empresa --- #}
            <h5 class="mb-3">Datos de la Empresa</h5>
            <div class="mb-4">
                {{ form_row(registrationForm.companyName, {
                    'label_attr': {'class': 'form-label'},
                    'attr': {'class': 'form-control', 'placeholder': 'Ej: Mi Empresa S.L.'}
                }) }}
            </div>

            <hr class="my-4">

            {# --- Sección del Usuario Administrador --- #}
            <h5 class="mb-3">Datos del Administrador</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(registrationForm.nombre, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(registrationForm.apellidos, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Contraseña',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>
            <div class="mb-4">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg">Registrar y Crear Cuenta</button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}