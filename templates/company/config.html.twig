{% extends 'base.html.twig' %}

{% block title %}Configuración de la Empresa{% endblock %}

{% block body %}
<div class="container mt-4" style="max-width: 700px;">

    {# Bucle para mostrar el mensaje 'success' del controlador #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card form-card">
        <div class="card-header">
            <h2>Configuración de la Empresa</h2>
        </div>
        <div class="card-body">
            {{ form_start(config_form) }}

            <div class="form-group">
                {{ form_label(config_form.name) }}
                {{ form_widget(config_form.name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(config_form.cif) }}
                {{ form_widget(config_form.cif, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(config_form.address) }}
                {{ form_widget(config_form.address, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(config_form.phone) }}
                {{ form_widget(config_form.phone, {'attr': {'class': 'form-control'}}) }}
            </div>

            {# El botón ya tiene estilo desde el FormType #}
            {{ form_row(config_form.guardar) }}

            {{ form_end(config_form) }}
        </div>
    </div>
</div>
{% endblock %}